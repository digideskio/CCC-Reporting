<% form_for [@report_field_group, @report_field] do |f| %>
	<%= f.error_messages %>
	<p>
		<%= f.label :label %>
		<%= f.text_field :label, :size => 10 %>
	</p>
	<p>
		<%= f.label :size %>
		<%= f.text_field :size, :size => 3 %>
	</p>
	<p>
		<%= f.label :report_field_type %>
		<%= f.select :report_field_type_id, ReportField::REPORT_TYPE %>
	</p>
	
	<div style="width: 100%; overflow: auto;">
		<p style="float: left; margin-right: 1em;">
			<%= f.label :render_order, "Order" %><br />
			<%= f.text_field :render_order, :size => 3 %>
		</p>
		<p style="float: left; margin-right: 1em;">
			<%= f.label :float %><br />
			<%= f.select :float, [["None","none"],["Left","left"],["Right","right"]] %>
		</p>
	</div>
	
	<div style="width: 100%; overflow: auto;">
		<p style="float: left; margin-right: 1em;">
			<%= f.label :pos_x %><br />
			<%= f.text_field :pos_x, :size => 3 %>
		</p>
		<p style="float: left; margin-right: 1em;">
			<%= f.label :pos_y %><br />
			<%= f.text_field :pos_y, :size => 3 %>
		</p>
		<p style="float: left; margin-right: 1em;">
			<%= f.label :width %><br />
			<%= f.text_field :width, :size => 3 %>
		</p>
		<p style="float: left;">
			<%= f.label :height %><br />
			<%= f.text_field :height, :size => 3 %>
		</p>
	</div>
	
	<%= f.hidden_field :report_field_group_id, :value => @report_field_group.id %>
	
	<%= f.submit 'Save Field', :class => "command" %>
	<%= link_to 'Cancel', organization_report_path(@report_field_group.report.organization, @report_field_group.report), :class => "command" %>
<% end %>